
  <h2 class="text-lg font-semibold text-gray-800">Modifier le mot de passe</h2>

  <%= form_with url: update_password_profile_path, method: :patch, local: true, class: "space-y-4" do |f| %>

    <div>
      <%= label_tag :current_password, "Mot de passe actuel",
          class: "block text-sm font-medium text-gray-700" %>

      <%= password_field_tag :current_password, nil,
          class: "mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-200 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :password, "Nouveau mot de passe",
          class: "block text-sm font-medium text-gray-700" %>

      <%= f.password_field :password,
          class: "mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-200 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Confirmation",
          class: "block text-sm font-medium text-gray-700" %>

      <%= f.password_field :password_confirmation,
          class: "mt-1 w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-200 focus:border-blue-500" %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "Mettre Ã  jour",
          class: "px-4 py-2 bg-blue-600 text-white rounded-md shadow hover:bg-blue-700 transition" %>
    </div>

  <% end %>

