<div class="min-h-screen flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full bg-white shadow-xl rounded-xl p-8">

    <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">
      Se connecter
    </h2>

    <%= form_with url: session_url, method: :post, class: "space-y-6", local: true do |f| %>

      <!-- EMAIL -->
      <div>
        <%= label_tag :email_address, "Adresse e-mail", class: "block text-sm font-medium text-gray-700" %>
        <%= email_field_tag :email_address, nil, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- PASSWORD -->
      <div>
        <%= label_tag :password, "Mot de passe", class: "block text-sm font-medium text-gray-700" %>
        <%= password_field_tag :password, nil, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- SUBMIT -->
      <div>
        <%= f.submit "Connexion", class: "w-full py-3 rounded-lg bg-blue-600 hover:bg-blue-700 text-white font-semibold shadow-md transition" %>
      </div>

    <% end %>

    <!-- REGISTER LINK -->
    <p class="text-center text-sm text-gray-600 mt-4">
      Nouveau ici ?
      <a href="/users/new" class="text-blue-600 hover:text-blue-800 font-medium">Créer un compte</a>
    </p>

    <!-- MOT DE PASSE OUBLIÉ -->
    <p class="text-center text-sm text-gray-600 mt-2">
      <a href="<%= new_password_path %>" class="text-blue-600 hover:text-blue-800 font-medium">
        Mot de passe oublié ?
      </a>
    </p>

  </div>
</div>
