<div class="min-h-screen flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full bg-white shadow-xl rounded-xl p-8">
    
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">
      Créer un compte
    </h2>

    <%= form_with model: @user, url: users_path, class: "space-y-6" do |f| %>

      <!-- EMAIL -->
      <div>
        <%= f.label :email_address, "Adresse e-mail", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email_address, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- PASSWORD -->
      <div>
        <%= f.label :password, "Mot de passe", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- PASSWORD CONFIRMATION -->
      <div>
        <%= f.label :password_confirmation, "Confirmation du mot de passe", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= f.submit "Créer mon compte", class: "w-full py-3 rounded-lg bg-blue-600 hover:bg-blue-700 text-white font-semibold shadow-md transition" %>
      </div>

    <% end %>

    <p class="text-center text-sm text-gray-600 mt-4">
      Déjà inscrit ?
      <a href="/login" class="text-blue-600 hover:text-blue-800 font-medium">Se connecter</a>
    </p>

  </div>
</div>
